# ============================================
# Alessia Voice Bridge - Environment Variables
# ============================================

# WebSocket Server Configuration
WS_HOST=0.0.0.0
WS_PORT=9090
WS_AUTH_TOKEN=your-secret-token-here

# Replit Connection (NO /ws/ai-voice - lo aggiunge il codice)
REPLIT_WS_URL=https://your-repl.repl.co
REPLIT_API_URL=https://your-repl.repl.co
REPLIT_API_TOKEN=your-service-token-from-ui

# Audio Configuration
AUDIO_SAMPLE_RATE_IN=8000
AUDIO_SAMPLE_RATE_OUT=8000

# Session Management
SESSION_TIMEOUT_MS=120000
MAX_CONCURRENT_CALLS=10

# Security
# IP prefixes allowed for WebSocket connections (comma-separated)
# Default allows localhost and Docker networks
ALLOWED_IP_PREFIXES=127.0.0.1,::1,::ffff:127.0.0.1,172.17.,172.18.,172.19.,10.
# Rate limiting for HTTP endpoints
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30
# Service token for outbound call API
REPLIT_SERVICE_TOKEN=your-service-token-here

# Logging
LOG_LEVEL=info
